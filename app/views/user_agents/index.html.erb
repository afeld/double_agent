<h1>Listing user_agents</h1>

<%= image_tag 'sean_connery_james_bond.jpg', height: 200 %>

<table>
  <tr>
    <th>Original</th>
    <th>Visits</th>
    <th>Last seen at</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @user_agents.each do |user_agent| %>
  <tr class="userAgent <%= 'mine' if user_agent == @my_ua %>">
    <td><%= user_agent.original %></td>
    <td><%= user_agent.visits %></td>
    <td><%= user_agent.last_seen_at %></td>
    <td><%= link_to 'Show', user_agent %></td>
    <td><%= link_to 'Edit', edit_user_agent_path(user_agent) %></td>
    <td><%= link_to 'Destroy', user_agent, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User agent', new_user_agent_path %>
